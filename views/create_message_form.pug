extends layout 

block content 
  h1=title 
  if currentUser
    form(action="" method="POST")
      div(class="mb-3 mt-2")
        label(for="title" class="form-label") Message Title
        input(type="text" name="title" class="form-control" id="title" placeholder="Title")
      div(class="mb-3 mt-2")
        label(for="message" class="form-label") Enter Message
        textarea(name="message", cols="30", rows="10" class="form-control" id="message" placeholder="Message")
      button(class="btn btn-primary mb-2" type="submit") Submit
    if errors 
      ul
        each error in errors 
          li=error.msg
      
  else 
    p You must be signed in to send a message

  